%p= "#{@welcome_message}"
%br
- if @user_type == "Admin"
    = link_to "Edit Profile", edit_admin_path(session[:user_id])
    = link_to "Add Event", new_event_path
    %h2{:style => "text-align: center;"}= "Events" 
    %br
    %table
        %thead 
            %tr 
                %th Event Name 
                %th Event Date 
                %th Start Time 
                %th End Time  
        %tbody 
            -@events.each do |event|
                %tr 
                    %td= event.name
                    %td= event.event_date 
                    %td= event.start_time 
                    %td= event.end_time
%br

